<%- include("header") -%>

<div class="box" id="heading">
  <h1><%= day %></h1>
</div>


<div class="box">

  <%  items.forEach(function(element){%>
    <form action="/delete" method="post">
      <div class="item">
        <input type="checkbox" name = "checkbox" value = "<%= element._id %>" onChange="this.form.submit()">
        <p><%= element.name %></p>
      </div>
    </form>

  <%})%>


  <form class="item" action="/" method="post">
    <input type="text" name="newTask" placeholder="Add new task" autocomplete="off">
    <button type="submit" name="button" value=<%= day %>>+</button>
  </form>

</div>

<%- include("footer") -%>
