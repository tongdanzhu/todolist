<%- include("header") -%>

  <div class="box" id="heading">
    <h1><%= day %></h1>
  </div>


  <div class="box">
    <% for(var i = 0; i < items.length; i++){ %>
      <div class="item">
        <input type="checkbox">
        <p><%= items[i] %></p>
      </div>
    <% } %>

    <form class="item" action="/" method="post">
      <input type="text" name="newTask" placeholder="Add new task" autocomplete="off">
      <button type="submit" name="button" value = <%= day %> >+</button>
    </form>

  </div>

<%- include("footer") -%>
